---
import "@fontsource/bebas-neue";
import { Image } from "astro:assets";
import logoWit from "../images/logoWit.svg";
---

<footer id="bottom">
    <div class="switch">
        <p class="l">AEGEE-Delft</p>
        <div>
            <p>Broeder Lazarus</p>
            <p>Molslaan 104</p>
            <p>2611RP</p>
            <p>Delft</p>
        </div>
    </div>
    <div>
        <Image src={logoWit} alt="AEGEE-Delft logo" width="100" />
    </div>
</footer>

<style lang="scss">
    footer {
        background-color: #70086e;
        margin: 0;
        padding: 0;
        width: 100%;
        height: fit-content;
        display: flex;
        color: white;
        justify-content: space-around;
    }
    div {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-top: 1vmin;
        p {
            margin: 0;
            padding: 0;
        }
    }

    .l {
        font-family: "Bebas Neue", sans-serif;
        font-size: x-large;
    }
    .switch {
        padding: 1vmin;
    }
</style>
