---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import "@fontsource-variable/newsreader/opsz-italic.css";

interface Props {
    image: ImageMetadata;
    alt: string;
    logo: ImageMetadata;
    x?: number;
    y?: number;
}

const { image, alt, logo, x = 1, y = 1 } = Astro.props;
---

<section>
    <Image src={image} alt={alt} loading="eager" />
    <div>
        <Image
            src={logo}
            alt="logo"
            widths={[240, 540, 720, 1080]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, 1080px`}
            width={800}
            loading="eager"
            transition:name="bg-image"
        />
    </div>
</section>

<style define:vars={{ x, y }} lang="scss">
    section {
        display: grid;
        justify-content: center;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(4, 1fr);
        & > img {
            grid-column: 1 / 5;
            grid-row: 1 / 5;
            width: 100%;

            @media (max-width: 768px) {
                object-fit: cover;
            }
        }
        height: 90vh;

        &>img {
            height: 90vh;
        }
    }
    div {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-self: center;
        grid-column: 1 / span 4;
        grid-row: 2 / span 3;

        img {
            justify-self: center;
            align-self: center;
            @media (max-width: 720px) {
                width: 80%;
            }
        }
    }
</style>
