---
import type { ImageMetadata } from "astro";
import { Image, getImage } from "astro:assets";
import "@fontsource-variable/newsreader/opsz-italic.css";
import "@fontsource/bebas-neue";

interface Props {
    image: ImageMetadata;
    logo: ImageMetadata;
    url: string;
    text: string;
}

const { image, logo, url, text } = Astro.props;

const newImg = await getImage({ src: image, width: 1920 });
---

<section>
    <Image src={logo} width={1920} alt="Avontuur aan de horizon" />
    <p><a href={url}>{text}</a></p>
</section>

<style define:vars={{ imgSrc: `url(${newImg.src})` }} lang="scss">
    section {
        background-image: var(--imgSrc);
        background-image: var(--imgSrc);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 90vh;
        display: flex;
        flex-direction: column;
        justify-content: end;
        align-items: center;
        @media (max-width: 768px) {
            min-height: 50vh;
        }
    }

    img {
        width: 100%;
        height: auto;
        padding-top: 10em;
    }
    p {
        font-size: 3rem;
        color: white;
        text-align: center;

        a {
            background: #AF18DB;
            padding: 1rem;
            margin: 1rem;
            border-radius: 1rem;
            color: white;
            text-decoration: none;
            font-family: "Bebas Neue", sans-serif;
            &:hover {
                text-decoration: underline;
            }
        }

        @media (max-width: 768px) {
            font-size: 2rem;
        }
    }
</style>
