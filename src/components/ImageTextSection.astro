---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import "@fontsource-variable/newsreader/opsz-italic.css";

interface Props {
    image: ImageMetadata;
    alt: string;
    x?: number;
    y?: number;
    full?: boolean;
}

const { image, alt, x = 1, y = 1, full = true } = Astro.props;
var span = full ? 2 : 1;
---

<section>
    <Image src={image} alt={alt} transition:name="bg-image" />
    <div>
        <slot />
    </div>
</section>

<style define:vars={{ x, y, span }}>
    section {
        display: grid;
        justify-content: center;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
    }
    img {
        grid-column: 1 / 3;
        grid-row: 1 / 3;
        @media (max-width: 768px) {
            object-fit: cover;
        }
        width: 100%;
    }
    div {
        display: flex;
        flex-direction: column;
        justify-content: stretch;
        text-align: center;
        grid-column: var(--x) / span var(--span);
        grid-row: var(--y) / span var(--span);
        align-self: center;
        padding-top: 10vh;
        @media (max-width: 768px) {
            grid-column: 1;
            grid-row: 1;
        }
    }

    h1 {
        font-size: 9rem;
        margin: 0;
        padding: 0;
        width: 100%;
        align-self: flex-start;
        color: white;
        font-family: "Newsreader Variable", serif;
        @media (max-width: 768px) {
            font-size: 3rem;
        }
    }
</style>
