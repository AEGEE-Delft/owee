---
import logoPaars from "../images/logoPaars.svg";
import logoWit from "../images/logoWit.svg";
import { Image } from "astro:assets";
import "@fontsource/bebas-neue";
---

<div id="holder">
    <header>
        <Image
            src={logoWit}
            alt="Logo"
            width="200"
            loading="eager"
            id="aegeelogo"
        />
    </header>
    <nav>
        <a href="/">Home</a>
        <a href="/travel">Travel</a>
        <a href="/gezelligheid">Gezelligheid</a>
        <a href="/europe">Europe</a>
    </nav>
    <header>
        <Image src={logoPaars} alt="Logo" width="200" loading="eager" />
    </header>
</div>

<style lang="scss">
    #holder {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        position: fixed;
        z-index: 100;
        top: 0;
        width: 100vw;
        background-color: transparent;
        border-bottom: white 1px solid;

        // transition: backdrop-filter 0.5s linear;

        &[data-scroll="1"] {
            box-shadow: 0px -10px 2px rgba(34, 34, 34, 0.5);
            backdrop-filter: saturate(180%) blur(20px);
            @media (max-width: 768px) {
                backdrop-filter: none;
            }
        }

        @media (max-width: 768px) {
            flex-direction: column-reverse;
            position: absolute;
        }
        & > * {
            margin: 1rem;
        }
    }
    header {
        display: flex;
        flex-direction: row;
        align-items: center;
        align-content: center;
        justify-content: space-evenly;
    }
    nav {
        display: flex;
        flex-direction: row;
        align-items: center;
        align-content: center;
        justify-content: space-evenly;
        flex-grow: 100;
    }

    a {
        text-decoration: none;
        color: white;
        font-size: xx-large;
        @media (max-width: 768px) {
            font-size: x-large;
        }
        font-family: "Bebas Neue", sans-serif;
    }

    @media (max-width: 768px) {
        #aegeelogo {
            display: none;
        }
    }
</style>

<script>
    function changeCss() {
        var navElement = document.querySelector<HTMLDivElement>("#holder");
        if (navElement === null) return;

        if (window.scrollY > 0) {
            navElement.setAttribute("data-scroll", "1");
        } else {
            navElement.setAttribute("data-scroll", "0");
        }
    }

    window.addEventListener("scroll", changeCss, false);
</script>
