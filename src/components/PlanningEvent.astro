---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

import "@fontsource/bebas-neue";
import "@fontsource/open-sans";

interface Props {
    time: string;
    location: string;
    title: string;
    imageSource: ImageMetadata;
    right?: boolean;
}

const { time, location, title, imageSource, right = false } = Astro.props;

const alignment = right ? "right" : "left";

const classes = [alignment];
---

<tr class:list={classes}>
    <td>
        <div class="content">
            <h3>{title}</h3>
            <p>
                <slot />
            </p>
        </div>
    </td>
    <td>
        <p>&nbsp;&nbsp;&nbsp;{time}&nbsp;&nbsp;&nbsp;</p>
        <p>{location}</p>
    </td>
    <td>
        <Image src={imageSource} alt={title} width={600} />
    </td>
    <td>&nbsp;</td>
</tr>

<style lang="scss">
    tr {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        width: 100%;

        &.right {
            td:nth-child(1) {
                order: 3;
                width: 40%;
            }
            td:nth-child(2) {
                order: 2;
                width: 10%;
            }
            td:nth-child(3) {
                order: 1;
                width: 35%;
            }
            td:nth-child(4) {
                order: 4;
                width: 15%;
            }

            img {
                float: right;
                border-radius: 5vw 0 0 5vw;
                @media (min-width: 768px) {
                    clip-path: inset(0 50px 0 0);
                    margin: 0px -51px;
                }
            }

            text-align: left;
        }
        &.left {
            text-align: left;
            td:nth-child(1) {
                width: 35%;
            }
            td:nth-child(2) {
                width: 10%;
            }
            td:nth-child(3) {
                width: 40%;
            }

            td:nth-child(4) {
                width: 15%;
            }

            img {
                float: left;
                border-radius: 0 5vw 5vw 0;
            }
            text-align: right;
        }

        td:nth-child(2) {
            text-align: center;
            background-color: white;
            mix-blend-mode: screen;
            * {
                font-family: "Bebas Neue", sans-serif;
                font-size: 2.5rem;
                padding: 0;
                margin: 0;
            }

            p:first-child {
                padding-top: 4.5rem;
                text-decoration: underline;
            }
        }

        @media (max-width: 768px) {
            td {
                width: 100% !important;
                text-align: center;
                order: initial !important;
                p:first-child {
                    padding-top: 0 !important;
                }
            }
            img {
                border-radius: 5vw !important;
                width: 90vw !important;
                height: 60vw;
                float: none !important;
            }
        }

        .content {
            h3 {
                font-variant: small-caps;
                font-size: 2rem;
                font-weight: 700;
            }
            p {
                font-size: 1.5rem;
                font-weight: 500;
            }
            p,
            h3 {
                padding: 0 3.5rem;
                color: white;
            }
        }

        img {
            padding-bottom: 0.5rem;
            width: 30vw;
        }
    }
</style>
