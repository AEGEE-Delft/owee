---
import BaseLayout from "../layouts/BaseLayout.astro";
import bg from "../images/gezelligheid.png";
import ImageTextSection from "../components/ImageTextSection.astro";
---

<BaseLayout title="Info">
    <ImageTextSection image={bg} alt="Party" y={2} x={1}>
        <h1 class="first">Info</h1>
    </ImageTextSection>
    <ImageTextSection image={bg} alt="Party" full={true}>
        <h1 class="first">Info</h1>
        <section id="base">
            <section class="row">
                <section class="item">
                    <h2>Wat doet AEGEE?</h2>
                    <p>Reizen, borrelen, algehele gezelligheid!</p>
                </section>
                <section class="item">
                    <h2>Hoe duur is het?</h2>
                    <p>50 euro per jaar!</p>
                </section>
                <section class="item">
                    <h2>Wat krijg ik daar voor?</h2>
                    <p>Vrienden voor het leven!</p>
                </section>
            </section>
            <section class="row">
                <section class="item">
                    <h2>Wat voor activiteiten zijn er?</h2>
                    <p>Reizen, borrels, en heel veel commissie activiteiten!</p>
                </section>
                <section class="item">
                    <h2>Waar kan ik me inschrijven?</h2>
                    <p>
                        Op de <a href="https://aegee-delft.nl/lid-worden"
                            >inschrijf pagina</a
                        >!
                    </p>
                </section>
                <section class="item">
                    <h2>Hebben jullie ook commissies?</h2>
                    <p>
                        Jazeker! Alles van de borrels verzorgen tot reizen
                        organiseren kan bij ons!
                    </p>
                </section>
            </section>
        </section>
    </ImageTextSection>
</BaseLayout>

